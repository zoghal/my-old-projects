SET TALK OFF
SET STATUS OFF
SET ESCAPE OFF
SET HEADING OFF
SET CLOCK TO 0, 59
PUBLIC FLNAME
DO WHILE .T.
DO CASE
	CASE LASTKEY()=27
		EXIT
	CASE LASTKEY()=13
		RUN &FLNAME
	OTHER WISE
		WAIT "PLEASE CHOICE & OR RUN PROGRAM"WINDOW NOWAIT 
ENDCASE
 DEFINE POPUP COL_MENU FROM 0,0 TO 23,37  PROMPT FILE LIKE *.EXE  SHADOW COLOR ,,W+/W  FOOTER 'RUN=ENTER  ' TITL '*.EXE'
 ON SELECTION POPUP COL_MENU DO FILESEL
 ACTIVATE POPUP COL_MENU
 *
ENDDO
PROCEDURE FILESEL
 FLNAME = PROMPT()
 DEACTIVATE POPUP
RETURN
